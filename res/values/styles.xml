<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>

    <style name="MemoryGame.LargeText" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/MemoryGame.LargeTextColor</item>
    </style>

    <style name="MG_Button">
        <item name="android:textColor">@color/MemoryGame.txtColor</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <color name="MemoryGame.LargeTextColor">#383838</color>
    <color name="MemoryGame.BgColor">#23C23B</color>
    <color name="MemoryGame.txtColor">#FFFFFF</color>

    <style name="Theme.MemoryGame" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>